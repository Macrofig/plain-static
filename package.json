{
  "name": "plain-static",
  "version": "1.2.0",
  "description": "A simple static site generator.",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/Macrofig/plain-static.git"
  },
  "scripts": {
    "lint": "xo",
    "test": "npm run lint && mocha",
    "prepublish": "npm test"
  },
  "author": "Juan Orozco <hi@juanorozco.com> (http://juanorozco.com)",
  "license": "ISC",
  "dependencies": {
    "file-save": "^0.2.0",
    "less": "^2.5.3",
    "marked": "^0.3.5",
    "mustache": "^2.2.0",
    "read-file": "^0.2.0",
    "chokidar": "^1.3.0",
    "debug": "^2.2.0",
    "del": "^2.1.0",
    "fs-extra": "^0.26.2",
    "glob": "^6.0.1",
    "xtend": "^4.0.1"
  },
  "devDependencies": {
    "documentjs": "^0.3.6",
    "mocha": "^2.3.4",
    "xo": "^0.11.2"
  },
  "xo": {
    "space": 2,
    "envs": [
      "node",
      "mocha"
    ],
    "rules": {
      "no-lonely-if": 0,
      "no-else-return": 0,
      "spaced-comment": 0
    },
    "ignore": [
      "node_modules/**",
      "dist/**",
      "docs/**"
    ]
  }
}
